#!/bin/sh
### BEGIN INIT INFO
# Provides:          resize2fs_once
# Required-Start:
# Required-Stop: 
# Default-Start: 2 3 4 5 S
# Default-Stop:
# Short-Description: Resize the root filesystem to fill partition
# Description:
### END INIT INFO

. /lib/lsb/init-functions

DISK=/dev/mmcblk0

case "$1" in
    start)
        log_daemon_msg "Starting firstboot" &&
            /sbin/firstboot-resizefs.sh ${DISK} 2 &&
            rm /etc/init.d/firstboot &&
            dpkg --purge odroid-firstboot &&
            log_end_msg $?
        ;;
    stop)
        ;;
    restart)
        ;;
    force-reload)
        ;;
    *)
        echo "Usage: $0 start" >&2
        exit 3
        ;;
esac
